  function getCurrentLanguage(): string {
    const saved = localStorage.getItem('preferred-language');
    if (saved && pageTranslations[saved]) return saved;
    const browserLang = navigator.language.split('-')[0];
    return pageTranslations[browserLang] ? browserLang : 'en';
  }

  function applyPageTranslations(lang: string) {
    const trans = pageTranslations[lang] || pageTranslations.en;
    
    // Update hero section
    const heroTitle = document.querySelector('h1');
    if (heroTitle && heroTitle.textContent?.includes('All-in-One')) {
      heroTitle.innerHTML = heroTitle.innerHTML.replace(/All-in-One[\s\S]*?Platform/, trans.heroTitle);
