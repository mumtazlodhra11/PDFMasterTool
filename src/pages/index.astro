      if (tools.length === 0) {
        // If tools not loaded yet, try again after a short delay
        setTimeout(filterTools, 100);
        return;
      }
      
      // Ensure ALL category filter buttons are always visible
      const allCategoryButtons = document.querySelectorAll('.category-filter');
      allCategoryButtons.forEach(btn => {
        const btnElement = btn as HTMLElement;
        btnElement.style.display = 'inline-flex';
        btnElement.style.visibility = 'visible';
        btnElement.style.opacity = '1';
        btnElement.style.pointerEvents = 'auto';
      });
      
      tools.forEach(tool => {
        const category = tool.getAttribute('data-category') || '';
        const name = tool.getAttribute('data-name') || '';
        const toolElement = tool as HTMLElement;
        
        // Check category match
        const matchesCategory = activeCategory === 'all' || category === activeCategory;
        
        // Check search match (search in name and description)
        const matchesSearch = !searchTerm || 
          name.includes(searchTerm.toLowerCase()) ||
          (toolElement.textContent || '').toLowerCase().includes(searchTerm.toLowerCase());
        
        if (matchesCategory && matchesSearch) {
          toolElement.style.display = 'block';
          toolElement.classList.add('animate-fade-in');
          visibleCount++;
        } else {
          toolElement.style.display = 'none';
          toolElement.classList.remove('animate-fade-in');
        }
      });
      
      // Update category count in button (only for category filter buttons, not tools)
      if (activeCategory !== 'all') {
        const activeFilter = document.querySelector(`.category-filter[data-category="${activeCategory}"]`) as HTMLElement;
        if (activeFilter) {
          const categoryTools = Array.from(tools).filter(t => 
            (t.getAttribute('data-category') || '') === activeCategory
          );
          const count = categoryTools.length;
          const buttonText = activeFilter.textContent?.split('(')[0].trim() || '';
          activeFilter.textContent = `${buttonText} (${count})`;
        }
      }
      
      // Show/hide no results message
      if (visibleCount === 0) {
        noResults?.classList.remove('hidden');
        if (toolsContainer) {
          toolsContainer.classList.add('hidden');
        }
      } else {
        noResults?.classList.add('hidden');
        if (toolsContainer) {
          toolsContainer.classList.remove('hidden');
        }
      }
    }
    
    // Category filter click handlers
