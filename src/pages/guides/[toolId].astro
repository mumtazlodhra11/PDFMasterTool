---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Navbar from '@/components/Navbar.astro';
import Footer from '@/components/Footer.astro';
import toolsData from '@/config/tools.json';

export async function getStaticPaths() {
  return toolsData.tools
    .filter(tool => !tool.hidden)
    .map((tool) => ({
      params: { toolId: tool.id },
      props: { tool },
    }));
}

const { tool } = Astro.props;
const category = toolsData.categories.find(cat => cat.id === tool.category);

// Generate tool-specific content
function getToolSpecificContent(tool: any) {
  const toolId = tool.id;
  const toolName = tool.name;
  
  // Detailed descriptions based on tool type
  const contentMap: Record<string, any> = {
    'merge-pdf': {
      intro: 'Merging PDFs is one of the most common document management tasks. Whether you\'re combining reports, merging scanned documents, or consolidating multiple files into one, this guide will walk you through every step.',
      detailedSteps: [
        {
          title: 'Prepare Your Files',
          content: 'Before merging, ensure all PDFs are ready. Check that files are not password-protected (or unlock them first), verify file sizes are within limits, and organize files in the order you want them merged. You can merge up to 150MB total across all files.',
          tips: ['Name your files with numbers (01, 02, 03) for easy ordering', 'Remove any blank pages before merging', 'Ensure consistent page sizes for better results']
        },
        {
          title: 'Upload Multiple PDFs',
          content: 'Click the upload area or drag and drop your PDF files. You can select multiple files at once using Ctrl+Click (Windows) or Cmd+Click (Mac). The tool will display thumbnails of each file so you can verify the order.',
          tips: ['Use drag-and-drop to reorder files before processing', 'Check the page count preview for each file', 'Remove any incorrectly added files before proceeding']
        },
        {
          title: 'Arrange File Order',
          content: 'The order of files determines the final PDF structure. Drag files up or down to rearrange them. Preview thumbnails help you verify the sequence. This is crucial for documents like reports or presentations where order matters.',
          tips: ['Start with cover pages or title pages', 'Group related documents together', 'End with appendices or supplementary materials']
        },
        {
          title: 'Merge and Download',
          content: 'Click "Process" to merge all files. The tool combines them into a single PDF while preserving formatting, bookmarks, and metadata. Processing time depends on file sizes and number of pages. Once complete, download your merged PDF.',
          tips: ['Wait for the progress bar to complete', 'Verify the merged file opens correctly', 'Check page count matches the sum of all files']
        }
      ],
      useCases: [
        {
          title: 'Business Reports',
          description: 'Combine quarterly reports, financial statements, and appendices into a single comprehensive document for stakeholders.',
          example: 'Merge Q1, Q2, Q3, and Q4 reports with executive summary and financial appendices.'
        },
        {
          title: 'Academic Papers',
          description: 'Combine research papers, references, and appendices for submission or publication.',
          example: 'Merge main paper, bibliography, figures, and supplementary materials in proper order.'
        },
        {
          title: 'Legal Documents',
          description: 'Consolidate contracts, amendments, and exhibits into one document for easy reference.',
          example: 'Merge original contract, all amendments, and supporting documents chronologically.'
        }
      ],
      advancedTips: [
        'For large merges (50+ files), process in batches to avoid browser timeouts',
        'Use consistent page orientations (all portrait or all landscape) for better results',
        'If files have different page sizes, the tool will adjust - but preview first',
        'Bookmarks and hyperlinks from original PDFs are preserved in the merged file',
        'Metadata from the first file is typically used for the merged document'
      ]
    },
    'split-pdf': {
      intro: 'Splitting PDFs is essential when you need to extract specific pages, create separate documents from one file, or reduce file sizes. This comprehensive guide covers everything from basic splitting to advanced page range extraction.',
      detailedSteps: [
        {
          title: 'Upload Your PDF',
          content: 'Start by uploading the PDF you want to split. The tool will analyze the file and display a page preview. You can see thumbnails of all pages to help you decide how to split the document.',
          tips: ['Check the total page count before splitting', 'Verify the PDF is not corrupted or password-protected', 'Ensure file size is under 150MB']
        },
        {
          title: 'Choose Split Method',
          content: 'You have multiple options: Split by page ranges (e.g., pages 1-10, 11-20), extract specific pages (e.g., pages 5, 8, 12), or split every N pages (e.g., every 5 pages). Select the method that best fits your needs.',
          tips: ['Use page ranges for sequential splits', 'Extract specific pages for non-sequential content', 'Split every N pages for uniform document sizes']
        },
        {
          title: 'Define Page Ranges',
          content: 'Enter your page ranges in the format "1-10" or individual pages like "5,8,12". You can create multiple ranges. The tool will generate separate PDFs for each range or extracted page.',
          tips: ['Use commas to separate multiple ranges: "1-5,10-15,20"', 'Preview pages before confirming ranges', 'Remember page numbers start from 1, not 0']
        },
        {
          title: 'Process and Download',
          content: 'Click "Process" to split your PDF. The tool creates separate files for each range. You\'ll receive a ZIP file containing all split PDFs, or individual downloads depending on the number of splits.',
          tips: ['Large PDFs may take longer to split', 'Check all split files are present', 'Verify page content is correct in each split file']
        }
      ],
      useCases: [
        {
          title: 'Invoice Extraction',
          description: 'Extract individual invoices from a monthly statement PDF containing multiple invoices.',
          example: 'Split a 50-page statement into 25 separate invoice PDFs, one per page.'
        },
        {
          title: 'Chapter Separation',
          description: 'Split a large book or manual into individual chapters for easier distribution.',
          example: 'Split a 200-page manual into 10 chapters of approximately 20 pages each.'
        },
        {
          title: 'Form Distribution',
          description: 'Extract individual forms from a multi-form document for separate distribution.',
          example: 'Split a 30-page form collection into 30 individual form PDFs.'
        }
      ],
      advancedTips: [
        'Use "Extract Pages" for non-sequential pages (e.g., pages 1, 5, 10, 15)',
        'Split by size is useful when you need files under a specific MB limit',
        'Page ranges are inclusive: "1-10" includes both page 1 and page 10',
        'You can split into individual pages by using ranges like "1-1,2-2,3-3"',
        'Metadata and bookmarks are preserved in each split file'
      ]
    },
    'compress-pdf': {
      intro: 'PDF compression is crucial for email attachments, web uploads, and storage optimization. This guide teaches you how to reduce file sizes while maintaining acceptable quality, with different compression strategies for various use cases.',
      detailedSteps: [
        {
          title: 'Upload and Analyze',
          content: 'Upload your PDF file. The tool analyzes the file structure, identifies images, fonts, and other elements that can be optimized. You\'ll see the current file size and estimated compression potential.',
          tips: ['Larger files show more compression potential', 'Image-heavy PDFs compress better than text-only', 'Check the estimated size reduction before processing']
        },
        {
          title: 'Choose Compression Level',
          content: 'Select your compression level: Low (minimal quality loss, moderate size reduction), Medium (balanced quality and size), or High (maximum compression, some quality loss). For documents with images, Medium usually provides the best balance.',
          tips: ['Use Low for documents that need printing', 'Medium works best for screen viewing and email', 'High is suitable for archival or web-only use']
        },
        {
          title: 'Configure Advanced Options',
          content: 'Fine-tune compression settings: Image quality (DPI reduction), color space optimization, font subsetting, and object stream compression. These options help achieve better compression ratios.',
          tips: ['Reduce image DPI for screen-only documents (150 DPI is usually sufficient)', 'Enable font subsetting to include only used characters', 'Use object streams for better compression on text-heavy PDFs']
        },
        {
          title: 'Preview and Compress',
          content: 'Review the estimated output size and quality impact. Click "Process" to compress. The tool processes images, optimizes fonts, and removes unnecessary metadata. Download your compressed PDF and verify quality meets your needs.',
          tips: ['Compare file sizes before and after', 'Open the compressed PDF to verify quality', 'If quality is too low, try a lower compression level']
        }
      ],
      useCases: [
        {
          title: 'Email Attachments',
          description: 'Compress large PDFs to meet email size limits (typically 25MB) while maintaining readability.',
          example: 'Reduce a 45MB report to 18MB for email distribution without significant quality loss.'
        },
        {
          title: 'Web Publishing',
          description: 'Optimize PDFs for website uploads to improve page load times and user experience.',
          example: 'Compress a 12MB product catalog to 3MB for faster website downloads.'
        },
        {
          title: 'Storage Optimization',
          description: 'Reduce storage requirements for large document archives while maintaining accessibility.',
          example: 'Compress a 500MB archive of scanned documents to 150MB for cloud storage.'
        }
      ],
      advancedTips: [
        'Scanned PDFs compress better than native PDFs (more image data to optimize)',
        'Text-only PDFs have limited compression potential (already optimized)',
        'Remove embedded fonts if not needed for better compression',
        'Use "Smart" compression mode for automatic optimization',
        'For best results, compress before merging multiple PDFs'
      ]
    }
  };
  
  // Return specific content or default
  return contentMap[toolId] || {
    intro: `${toolName} is a powerful tool that helps you ${tool.description.toLowerCase()}. This comprehensive guide will walk you through every feature, from basic usage to advanced techniques, ensuring you get the most out of this tool.`,
    detailedSteps: [
      {
        title: 'Getting Started',
        content: `To begin using ${toolName}, navigate to the tool page. The interface is designed to be intuitive and user-friendly, with clear instructions at each step.`,
        tips: ['Bookmark the tool page for quick access', 'Check browser compatibility before starting', 'Ensure you have a stable internet connection']
      },
      {
        title: 'File Preparation',
        content: `Prepare your files according to the requirements. Supported formats include ${tool.inputFormats.join(', ')}, and files must be under ${tool.maxFileSize}MB.`,
        tips: ['Verify file format compatibility', 'Check file size before uploading', 'Ensure files are not corrupted']
      },
      {
        title: 'Configuration',
        content: `Configure the tool settings according to your needs. ${tool.features && tool.features.length > 0 ? `Available options include ${tool.features.slice(0, 3).join(', ')}.` : 'Adjust settings to match your requirements.'}`,
        tips: ['Review all available options', 'Start with default settings and adjust as needed', 'Save your preferred settings for future use']
      },
      {
        title: 'Processing and Results',
        content: `Click "Process" to begin. The tool will handle your files securely in your browser. Once complete, review the results and download your processed files.`,
        tips: ['Wait for processing to complete', 'Verify output quality', 'Download files promptly']
      }
    ],
    useCases: [
      {
        title: 'Professional Use',
        description: `Perfect for professionals who need to ${tool.description.toLowerCase()} as part of their daily workflow.`,
        example: 'Streamline document processing tasks and improve productivity.'
      },
      {
        title: 'Academic Use',
        description: `Students and educators can use ${toolName} to manage academic documents efficiently.`,
        example: 'Organize research papers, assignments, and study materials.'
      },
      {
        title: 'Business Use',
        description: `Businesses can leverage ${toolName} to improve document management processes.`,
        example: 'Handle contracts, reports, and presentations with ease.'
      }
    ],
    advancedTips: [
      'Process files during off-peak hours for better performance',
      'Use batch processing when working with multiple files',
      'Keep your browser updated for optimal performance',
      'Clear browser cache if you experience issues',
      'All processing happens locally - your files never leave your device'
    ]
  };
}

const toolContent = getToolSpecificContent(tool);
---

<BaseLayout
  title={`${tool.name} - Complete Guide 2025 | PDFEliteTools`}
  description={`Learn how to use ${tool.name} with our comprehensive 2025 guide. Step-by-step tutorial with tips and best practices.`}
  canonical={`/guides/${tool.id}`}
>
  <Navbar />

  <div class="min-h-screen bg-white dark:bg-gray-900 py-12">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-12">
          <div class="text-6xl mb-4">{tool.icon}</div>
          <h1 class="text-4xl md:text-5xl font-black mb-4">
            <span class="gradient-text">{tool.name} - Complete Guide 2025</span>
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-400">
            {tool.description}
          </p>
          <div class="mt-4 flex items-center justify-center gap-4 text-sm text-gray-500 dark:text-gray-400">
            <span>Category: {category?.name || tool.category}</span>
            <span>‚Ä¢</span>
            <span>Updated: {(() => {
              const hash = tool.id.split('').reduce((acc: number, char: string) => acc + char.charCodeAt(0), 0);
              const monthIndex = hash % 3;
              const months = ['September', 'October', 'November'];
              return months[monthIndex] || 'September';
            })()} 2025</span>
            <span>‚Ä¢</span>
            <span>Reading time: 8-10 min</span>
          </div>
        </div>

        <!-- Quick Links -->
        <div class="mb-8 flex flex-wrap gap-4 justify-center">
          <a href={`/tools/${tool.id}`} class="px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white font-semibold rounded-lg transition-colors">
            Try {tool.name} ‚Üí
          </a>
          <a href={`/blogs/${tool.id}`} class="px-6 py-3 bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-900 dark:text-white font-semibold rounded-lg transition-colors">
            Read Blog ‚Üí
          </a>
        </div>

        <!-- Table of Contents -->
        <div class="glass p-6 rounded-2xl border border-gray-200/50 dark:border-gray-700/50 mb-8">
          <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4">üìë Table of Contents</h2>
          <ul class="space-y-2 text-gray-600 dark:text-gray-400">
            <li><a href="#introduction" class="hover:text-primary-600 dark:hover:text-primary-400">1. Introduction</a></li>
            <li><a href="#requirements" class="hover:text-primary-600 dark:hover:text-primary-400">2. Requirements & Prerequisites</a></li>
            <li><a href="#step-by-step" class="hover:text-primary-600 dark:hover:text-primary-400">3. Detailed Step-by-Step Guide</a></li>
            <li><a href="#features" class="hover:text-primary-600 dark:hover:text-primary-400">4. Key Features Explained</a></li>
            <li><a href="#use-cases" class="hover:text-primary-600 dark:hover:text-primary-400">5. Real-World Use Cases</a></li>
            <li><a href="#tips" class="hover:text-primary-600 dark:hover:text-primary-400">6. Advanced Tips & Best Practices</a></li>
            <li><a href="#troubleshooting" class="hover:text-primary-600 dark:hover:text-primary-400">7. Troubleshooting Common Issues</a></li>
            <li><a href="#faq" class="hover:text-primary-600 dark:hover:text-primary-400">8. Frequently Asked Questions</a></li>
          </ul>
        </div>

        <!-- Introduction -->
        <section id="introduction" class="mb-12">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">1. Introduction</h2>
          <div class="glass p-6 rounded-2xl border border-gray-200/50 dark:border-gray-700/50">
            <p class="text-gray-600 dark:text-gray-400 mb-4 text-lg leading-relaxed">
              {toolContent.intro}
            </p>
            <div class="bg-primary-50 dark:bg-primary-900/20 border-l-4 border-primary-600 p-4 my-4 rounded">
              <p class="text-gray-700 dark:text-gray-300">
                <strong>üí° Quick Fact:</strong> {tool.name} processes all files locally in your browser, ensuring complete privacy and security. Your documents never leave your device.
              </p>
            </div>
          </div>
        </section>

        <!-- Requirements -->
        <section id="requirements" class="mb-12">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">2. Requirements & Prerequisites</h2>
          <div class="glass p-6 rounded-2xl border border-gray-200/50 dark:border-gray-700/50">
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <h3 class="font-semibold text-gray-900 dark:text-white mb-3 flex items-center gap-2">
                  <svg class="w-5 h-5 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  Supported File Formats
                </h3>
                <ul class="space-y-2 text-gray-600 dark:text-gray-400">
                  <li>‚Ä¢ Input: {tool.inputFormats.join(', ')}</li>
                  <li>‚Ä¢ Output: {tool.outputFormat}</li>
                  <li>‚Ä¢ Maximum file size: {tool.maxFileSize}MB</li>
                </ul>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 dark:text-white mb-3 flex items-center gap-2">
                  <svg class="w-5 h-5 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  Browser Requirements
                </h3>
                <ul class="space-y-2 text-gray-600 dark:text-gray-400">
                  <li>‚Ä¢ Modern browser (Chrome, Firefox, Safari, Edge)</li>
                  <li>‚Ä¢ JavaScript enabled</li>
                  <li>‚Ä¢ Stable internet connection</li>
                  <li>‚Ä¢ No software installation needed</li>
                </ul>
              </div>
            </div>
          </div>
        </section>

        <!-- Detailed Step-by-Step Guide -->
        <section id="step-by-step" class="mb-12">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">3. Detailed Step-by-Step Guide</h2>
          <div class="space-y-6">
            {toolContent.detailedSteps.map((step: any, index: number) => (
              <div class="glass p-6 rounded-2xl border border-gray-200/50 dark:border-gray-700/50">
                <div class="flex items-start gap-4">
                  <div class="flex-shrink-0 w-10 h-10 rounded-full bg-gradient-to-br from-primary-600 to-primary-400 text-white flex items-center justify-center font-bold text-lg">
                    {index + 1}
                  </div>
                  <div class="flex-1">
                    <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">{step.title}</h3>
                    <p class="text-gray-600 dark:text-gray-400 mb-4 leading-relaxed">
                      {step.content}
                    </p>
                    {step.tips && step.tips.length > 0 && (
                      <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-4 mt-4">
                        <h4 class="font-semibold text-gray-900 dark:text-white mb-2 text-sm">üí° Pro Tips:</h4>
                        <ul class="space-y-1 text-sm text-gray-600 dark:text-gray-400">
                          {step.tips.map((tip: string) => (
                            <li>‚Ä¢ {tip}</li>
                          ))}
                        </ul>
                      </div>
                    )}
                  </div>
                </div>
              </div>
            ))}
          </div>
        </section>

        <!-- Key Features -->
        <section id="features" class="mb-12">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">4. Key Features Explained</h2>
          <div class="grid md:grid-cols-2 gap-4">
            {tool.features && tool.features.map((feature, index) => (
              <div class="glass p-5 rounded-xl border border-gray-200/50 dark:border-gray-700/50 hover:border-primary-500 transition-colors">
                <div class="flex items-start gap-3">
                  <div class="flex-shrink-0 w-8 h-8 rounded-lg bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center">
                    <span class="text-primary-600 dark:text-primary-400 font-bold">{index + 1}</span>
                  </div>
                  <div>
                    <h3 class="font-semibold text-gray-900 dark:text-white mb-2">{feature}</h3>
                    <p class="text-sm text-gray-600 dark:text-gray-400">
                      This feature enhances your workflow efficiency and ensures professional-quality results. Explore the tool interface to customize this feature according to your specific needs.
                    </p>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </section>

        <!-- Use Cases -->
        <section id="use-cases" class="mb-12">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">5. Real-World Use Cases</h2>
          <div class="space-y-4">
            {toolContent.useCases.map((useCase: any, index: number) => (
              <div class="glass p-6 rounded-2xl border border-gray-200/50 dark:border-gray-700/50">
                <div class="flex items-start gap-4">
                  <div class="flex-shrink-0 w-12 h-12 rounded-lg bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center">
                    <span class="text-2xl">{index === 0 ? 'üíº' : index === 1 ? 'üéì' : 'üè¢'}</span>
                  </div>
                  <div>
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">{useCase.title}</h3>
                    <p class="text-gray-600 dark:text-gray-400 mb-2">
                      {useCase.description}
                    </p>
                    <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-3 mt-3">
                      <p class="text-sm text-gray-700 dark:text-gray-300">
                        <strong>Example:</strong> {useCase.example}
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </section>

        <!-- Advanced Tips -->
        <section id="tips" class="mb-12">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">6. Advanced Tips & Best Practices for 2025</h2>
          <div class="glass p-6 rounded-2xl border border-gray-200/50 dark:border-gray-700/50">
            <div class="space-y-4">
              {toolContent.advancedTips.map((tip: string, index: number) => (
                <div class="flex items-start gap-3 p-3 bg-gray-50 dark:bg-gray-800 rounded-lg">
                  <span class="flex-shrink-0 w-6 h-6 rounded-full bg-primary-600 text-white flex items-center justify-center text-xs font-bold">
                    {index + 1}
                  </span>
                  <p class="text-gray-700 dark:text-gray-300">{tip}</p>
                </div>
              ))}
            </div>
          </div>
        </section>

        <!-- Troubleshooting -->
        <section id="troubleshooting" class="mb-12">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">7. Troubleshooting Common Issues</h2>
          <div class="space-y-4">
            <div class="glass p-6 rounded-2xl border border-gray-200/50 dark:border-gray-700/50">
              <h3 class="font-semibold text-gray-900 dark:text-white mb-2 flex items-center gap-2">
                <span class="text-red-500">‚ö†Ô∏è</span>
                File Won't Upload or Process
              </h3>
              <p class="text-gray-600 dark:text-gray-400 mb-2">
                If your file won't upload, check the following:
              </p>
              <ul class="list-disc list-inside space-y-1 text-gray-600 dark:text-gray-400 ml-4">
                <li>File format is supported: {tool.inputFormats.join(', ')}</li>
                <li>File size is under {tool.maxFileSize}MB limit</li>
                <li>File is not corrupted or password-protected</li>
                <li>Browser is up-to-date and JavaScript is enabled</li>
                <li>Try a different browser if issues persist</li>
              </ul>
            </div>
            <div class="glass p-6 rounded-2xl border border-gray-200/50 dark:border-gray-700/50">
              <h3 class="font-semibold text-gray-900 dark:text-white mb-2 flex items-center gap-2">
                <span class="text-yellow-500">‚è±Ô∏è</span>
                Processing Takes Too Long
              </h3>
              <p class="text-gray-600 dark:text-gray-400">
                Large files or complex documents may take longer. Close other browser tabs, ensure stable internet connection, and be patient. If processing exceeds 5 minutes, try splitting the file or reducing its complexity.
              </p>
            </div>
            <div class="glass p-6 rounded-2xl border border-gray-200/50 dark:border-gray-700/50">
              <h3 class="font-semibold text-gray-900 dark:text-white mb-2 flex items-center gap-2">
                <span class="text-blue-500">üìä</span>
                Output Quality Issues
              </h3>
              <p class="text-gray-600 dark:text-gray-400">
                Verify source file quality first. Use original, high-resolution files. Check tool settings for quality options. For scanned documents, ensure original scan quality is good. Some quality loss is normal with compression tools.
              </p>
            </div>
            <div class="glass p-6 rounded-2xl border border-gray-200/50 dark:border-gray-700/50">
              <h3 class="font-semibold text-gray-900 dark:text-white mb-2 flex items-center gap-2">
                <span class="text-green-500">üíæ</span>
                Download Issues
              </h3>
              <p class="text-gray-600 dark:text-gray-400">
                If download fails, check browser download settings, ensure sufficient disk space, and try right-clicking the download link to "Save As". Clear browser cache if downloads consistently fail.
              </p>
            </div>
          </div>
        </section>

