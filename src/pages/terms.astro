---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Navbar from '@/components/Navbar.astro';
import Footer from '@/components/Footer.astro';
---

<BaseLayout
  title="Terms of Service - Terms and Conditions | PDFEliteTools"
  description="Read PDFEliteTools's Terms of Service and Conditions. Understand the terms of use for our free PDF tools platform."
  canonical="/terms"
>
  <Navbar />

  <div class="min-h-screen bg-white dark:bg-gray-900 py-12">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-12">
          <h1 class="text-4xl md:text-5xl font-black mb-4">
            <span class="gradient-text">Terms of Service</span>
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-400">
            Last Updated: November 2025
          </p>
        </div>

        <!-- Terms Content -->
        <div class="prose prose-lg dark:prose-invert max-w-none">
          <div class="glass p-8 rounded-2xl border border-gray-200 dark:border-gray-700 space-y-8">
            
            <!-- Introduction -->
            <section>
              <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">1. Introduction</h2>
              <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
