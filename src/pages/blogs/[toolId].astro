export async function getStaticPaths() {
  return toolsData.tools
    .filter(tool => !tool.hidden)
    .map((tool) => ({
      params: { toolId: tool.id },
      props: { tool },
    }));
}

const { tool } = Astro.props;
const category = toolsData.categories.find(cat => cat.id === tool.category);

// Distribute dates across September, October, and November 2025
function getPublishDate(toolId: string) {
  // Create a simple hash from tool ID to consistently assign dates
  const hash = toolId.split('').reduce((acc, char) => acc + char.charCodeAt(0), 0);
  const monthIndex = hash % 3; // 0 = September, 1 = October, 2 = November
  
  const dates = [
    new Date('2025-09-15'), // September
    new Date('2025-10-15'), // October
    new Date('2025-11-15'), // November
  ];
  
  return dates[monthIndex];
}

const publishDate = getPublishDate(tool.id);

// Get month name for display
function getMonthName(date: Date) {
  const months = ['September', 'October', 'November'];
  const monthIndex = date.getMonth() - 8; // September = 8, October = 9, November = 10
  return months[monthIndex] || 'September';
}

const monthName = getMonthName(publishDate);

