---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Navbar from '@/components/Navbar.astro';
import Footer from '@/components/Footer.astro';
import { ToolTemplate } from '@/components/ToolTemplate';
---

<BaseLayout
  title="Fill PDF Forms - Fill out PDF forms with auto field detection | PDFMasterTool"
  description="Fill out PDF forms with auto field detection"
  canonical="/tools/fill-pdf-forms"
>
  <Navbar />

  <ToolTemplate
    client:load
    toolName="Fill PDF Forms"
    toolDescription="Fill out PDF forms with auto field detection"
    toolIcon="ðŸ“"
    acceptedFormats={".pdf"}
    maxFileSize={50}
