---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Navbar from '@/components/Navbar.astro';
import Footer from '@/components/Footer.astro';
import { ToolTemplate } from '@/components/ToolTemplate';
---

<BaseLayout
  title="Remove PDF Pages - Delete Pages from PDF Online | PDFMasterTool"
  description="Remove unwanted pages from PDF documents. Delete specific pages, page ranges, or multiple pages quickly and easily."
  canonical="/tools/remove-pages"
>
  <Navbar />

  <ToolTemplate
    client:load
    toolName="Remove PDF Pages"
    toolDescription="Delete unwanted pages from your PDF document with precision control"
    toolIcon="🗑️"
    acceptedFormats={['.pdf']}
    maxFileSize={100}
    maxFiles={1}
    multiple={false}
    toolType="remove-pages"
    outputFileName="edited.pdf"
  >
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-900 dark:text-white mb-2">
            Remove Method
          </label>
          <select class="w-full px-4 py-3 glass border border-gray-200/50 dark:border-gray-700/50 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent">
            <option value="select" selected>Select specific pages</option>
            <option value="range">Remove page range</option>
            <option value="odd">Remove all odd pages</option>
            <option value="even">Remove all even pages</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-900 dark:text-white mb-2">
            Page Numbers to Remove
          </label>
          <input
            type="text"
            placeholder="e.g., 1, 3, 5-8, 10"
            class="w-full px-4 py-3 glass border border-gray-200/50 dark:border-gray-700/50 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent"
          />
          <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">
            Enter page numbers separated by commas. Use ranges like "5-8" for multiple consecutive pages.
          </p>
        </div>
        <div class="flex items-center space-x-2">
          <input
            type="checkbox"
            id="preview-before-remove"
            checked
            class="w-4 h-4 text-primary-600 border-gray-300 rounded focus:ring-primary-500"
          />
          <label for="preview-before-remove" class="text-sm text-gray-700 dark:text-gray-300">
            Preview pages before removal
          </label>
        </div>
      </div>
    }
  >
    <div class="space-y-6">
      <div class="glass p-8 rounded-2xl border border-gray-200/50 dark:border-gray-700/50">
        <h3 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">How to Remove Pages</h3>
        <ol class="space-y-4 text-gray-600 dark:text-gray-400">
          <li class="flex items-start space-x-3">
            <span class="flex-shrink-0 w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold">1</span>
            <p>Upload your PDF file</p>
          </li>
          <li class="flex items-start space-x-3">
            <span class="flex-shrink-0 w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold">2</span>
            <p>Preview all pages and select which ones to delete</p>
          </li>
          <li class="flex items-start space-x-3">
            <span class="flex-shrink-0 w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold">3</span>
            <p>Enter page numbers or use bulk selection options</p>
          </li>
          <li class="flex items-start space-x-3">
            <span class="flex-shrink-0 w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold">4</span>
            <p>Click "Process Files" to remove selected pages</p>
          </li>
          <li class="flex items-start space-x-3">
            <span class="flex-shrink-0 w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold">5</span>
            <p>Download your edited PDF without unwanted pages</p>
          </li>
        </ol>
      </div>

      <div class="glass p-8 rounded-2xl border border-gray-200/50 dark:border-gray-700/50">
        <h3 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">Page Selection Tips</h3>
        <div class="space-y-3 text-gray-600 dark:text-gray-400">
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <p><strong>Single pages:</strong> Enter individual page numbers separated by commas (e.g., "1, 3, 5")</p>
          </div>
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <p><strong>Page ranges:</strong> Use hyphens for consecutive pages (e.g., "5-10" removes pages 5 through 10)</p>
          </div>
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <p><strong>Mixed selection:</strong> Combine both methods (e.g., "1, 3, 5-8, 12")</p>
          </div>
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <p><strong>Bulk options:</strong> Use "odd" or "even" to remove all odd/even numbered pages</p>
          </div>
        </div>
      </div>

      <div class="glass p-8 rounded-2xl border border-gray-200/50 dark:border-gray-700/50">
        <h3 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">Common Use Cases</h3>
        <div class="grid md:grid-cols-2 gap-4 text-gray-600 dark:text-gray-400">
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
              <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd" />
            </svg>
            <p>Remove blank or unwanted pages</p>
          </div>
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
              <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd" />
            </svg>
            <p>Delete confidential information</p>
          </div>
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
              <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd" />
            </svg>
            <p>Reduce file size by removing pages</p>
          </div>
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
              <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd" />
            </svg>
            <p>Extract only needed sections</p>
          </div>
        </div>
      </div>
    </div>
  </ToolTemplate>

  <Footer />
</BaseLayout>


