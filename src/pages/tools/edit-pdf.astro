---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Navbar from '@/components/Navbar.astro';
import Footer from '@/components/Footer.astro';
import ToolTemplate from '@/components/ToolTemplate';
---

<BaseLayout
  title="Edit PDF - Modify PDF Text and Images Online | PDFEliteTools"
  description="Edit PDF documents online. Modify text, add images, change formatting. Free PDF editor with intuitive interface."
  canonical="/tools/edit-pdf"
>
  <Navbar />

  <ToolTemplate
    client:load
    toolName="Edit PDF"
    toolDescription="Add customizable text to your PDF documents with full control over position, size, color, and page selection"
    toolIcon="✏️"
    acceptedFormats={['.pdf']}
    maxFileSize={100}
    maxFiles={1}
    multiple={false}
    toolType="edit-pdf"
    outputFileName={(name) => name.replace('.pdf', '_edited.pdf')}
  >
    <div class="space-y-6">
      <div class="glass p-8 rounded-2xl border border-primary-200/50 dark:border-primary-800/50 bg-gradient-to-br from-primary-50/50 to-blue-50/50 dark:from-primary-900/10 dark:to-blue-900/10">
        <div class="flex items-start space-x-3">
          <svg class="w-6 h-6 text-primary-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
            <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
          </svg>
          <div>
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Edit PDF - Add Text</h3>
            <p class="text-gray-600 dark:text-gray-400">
              Add customizable text to your PDF documents with full control. Choose the page, position, font size, and color. Perfect for adding notes, labels, annotations, or any custom text to your PDFs.
            </p>
          </div>
        </div>
      </div>

      <div class="glass p-8 rounded-2xl border border-gray-200/50 dark:border-gray-700/50">
        <h3 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">What You Get</h3>
        <div class="grid md:grid-cols-2 gap-4">
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <div>
              <p class="font-semibold text-gray-900 dark:text-white">Customizable Text</p>
              <p class="text-sm text-gray-600 dark:text-gray-400">Font size, color, and position</p>
            </div>
          </div>
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <div>
              <p class="font-semibold text-gray-900 dark:text-white">Page Selection</p>
              <p class="text-sm text-gray-600 dark:text-gray-400">Add text to any page</p>
            </div>
          </div>
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <div>
              <p class="font-semibold text-gray-900 dark:text-white">Position Presets</p>
              <p class="text-sm text-gray-600 dark:text-gray-400">Quick position selection</p>
            </div>
          </div>
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <div>
              <p class="font-semibold text-gray-900 dark:text-white">Original Content Preserved</p>
              <p class="text-sm text-gray-600 dark:text-gray-400">Your PDF remains unchanged</p>
            </div>
          </div>
        </div>
      </div>

      <div class="glass p-8 rounded-2xl border border-gray-200/50 dark:border-gray-700/50">
        <h3 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">Common Use Cases</h3>
        <ul class="space-y-3 text-gray-600 dark:text-gray-400">
          <li class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <p>Add notes and annotations to PDFs</p>
          </li>
          <li class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <p>Insert labels and captions</p>
          </li>
          <li class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <p>Add watermarks or headers</p>
          </li>
          <li class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <p>Mark documents with custom text</p>
          </li>
        </ul>
      </div>
    </div>
  </ToolTemplate>

  <Footer />
</BaseLayout>
















