---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Navbar from '@/components/Navbar.astro';
import Footer from '@/components/Footer.astro';
import ToolTemplate from '@/components/ToolTemplate';
---

<BaseLayout
  title="AI OCR - Convert Scanned PDFs to Searchable Text | PDFEliteTools"
  description="AI-powered OCR to extract text from scanned PDFs and images. Multi-language support with high accuracy."
  canonical="/tools/ai-ocr"
>
  <Navbar />

  <ToolTemplate
    client:load
    toolName="AI OCR"
    toolDescription="Convert scanned PDFs and images to searchable text using advanced AI OCR technology"
    toolIcon="ðŸ¤–"
    acceptedFormats={['.pdf', '.jpg', '.jpeg', '.png']}
    maxFileSize={50}
    maxFiles={10}
    multiple={true}
    toolType="ai-ocr"
    outputFileName={(name) => name.replace(/\.(pdf|jpg|jpeg|png)$/i, '_searchable.pdf')}
  
  >
    <div class="space-y-6">
      <div class="glass p-8 rounded-2xl border border-primary-200/50 dark:border-primary-800/50 bg-gradient-to-br from-primary-50/50 to-blue-50/50 dark:from-primary-900/10 dark:to-blue-900/10">
        <div class="flex items-start space-x-3">
          <svg class="w-6 h-6 text-primary-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
            <path d="M11 3a1 1 0 10-2 0v1a1 1 0 102 0V3zM15.657 5.757a1 1 0 00-1.414-1.414l-.707.707a1 1 0 001.414 1.414l.707-.707zM18 10a1 1 0 01-1 1h-1a1 1 0 110-2h1a1 1 0 011 1zM5.05 6.464A1 1 0 106.464 5.05l-.707-.707a1 1 0 00-1.414 1.414l.707.707zM5 10a1 1 0 01-1 1H3a1 1 0 110-2h1a1 1 0 011 1zM8 16v-1h4v1a2 2 0 11-4 0zM12 14c.015-.34.208-.646.477-.859a4 4 0 10-4.954 0c.27.213.462.519.476.859h4.002z" />
          </svg>
          <div>
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">AI-Powered OCR</h3>
            <p class="text-gray-600 dark:text-gray-400">
              Our advanced AI OCR technology uses Tesseract.js and machine learning to accurately extract text from scanned documents and images. Supports 100+ languages with high accuracy rates.
            </p>
          </div>
        </div>
      </div>

      <div class="glass p-8 rounded-2xl border border-gray-200/50 dark:border-gray-700/50">
        <h3 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">Features</h3>
        <div class="grid md:grid-cols-2 gap-4 text-gray-600 dark:text-gray-400">
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>100+ Language Support</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>High Accuracy</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>Searchable PDFs</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>Format Preservation</span>
          </div>
        </div>
      </div>
    </div>
  </ToolTemplate>

  <Footer />
</BaseLayout>
















