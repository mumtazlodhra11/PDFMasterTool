---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Navbar from '@/components/Navbar.astro';
import Footer from '@/components/Footer.astro';
import ToolTemplate from '@/components/ToolTemplate';
---

<BaseLayout
  title="Crop PDF - Crop PDF pages to custom dimensions | PDFEliteTools"
  description="Crop PDF pages to custom dimensions"
  canonical="/tools/crop-pdf"
>
  <Navbar />

  <ToolTemplate
    client:load
    toolName="Crop PDF"
    toolDescription="Crop PDF pages to custom dimensions"
    toolIcon="✂️"
    acceptedFormats={['.pdf']}
    maxFileSize={100}
    maxFiles={1}
    multiple={false}
    toolType="crop-pdf"
    outputFileName={(name) => name}
  />

  <Footer />
</BaseLayout>
