---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Navbar from '@/components/Navbar.astro';
import Footer from '@/components/Footer.astro';
import { ToolTemplate } from '@/components/ToolTemplate';
---

<BaseLayout
  title="PDF to Word - Convert PDF to DOCX Online Free | PDFMasterTool"
  description="Convert PDF to editable Word documents (DOCX) with OCR support. Extract text, images, and preserve formatting. Fast AI-powered conversion."
  canonical="/tools/pdf-to-word"
>
  <Navbar />

  <ToolTemplate
    client:load
    toolName="PDF to Word"
    toolDescription="Convert PDF to editable Word documents with AI-powered OCR and format preservation"
    toolIcon="ðŸ“"
    acceptedFormats={['.pdf']}
    maxFileSize={50}
    maxFiles={5}
    multiple={true}
    toolType="pdf-to-word"
    outputFileName="converted.pdf"
  
  >
    <div class="space-y-6">
      <div class="glass p-8 rounded-2xl border border-primary-200/50 dark:border-primary-800/50 bg-gradient-to-br from-primary-50/50 to-blue-50/50 dark:from-primary-900/10 dark:to-blue-900/10">
        <div class="flex items-start space-x-3">
          <svg class="w-6 h-6 text-primary-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
            <path d="M11 3a1 1 0 10-2 0v1a1 1 0 102 0V3zM15.657 5.757a1 1 0 00-1.414-1.414l-.707.707a1 1 0 001.414 1.414l.707-.707zM18 10a1 1 0 01-1 1h-1a1 1 0 110-2h1a1 1 0 011 1zM5.05 6.464A1 1 0 106.464 5.05l-.707-.707a1 1 0 00-1.414 1.414l.707.707zM5 10a1 1 0 01-1 1H3a1 1 0 110-2h1a1 1 0 011 1zM8 16v-1h4v1a2 2 0 11-4 0zM12 14c.015-.34.208-.646.477-.859a4 4 0 10-4.954 0c.27.213.462.519.476.859h4.002z" />
          </svg>
          <div>
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">AI-Powered OCR</h3>
            <p class="text-gray-600 dark:text-gray-400">
              Our advanced AI automatically detects scanned PDFs and extracts text with high accuracy. Perfect for converting old documents, receipts, and books to editable Word format.
            </p>
          </div>
        </div>
      </div>

      <div class="glass p-8 rounded-2xl border border-gray-200/50 dark:border-gray-700/50">
        <h3 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">Conversion Features</h3>
        <div class="grid md:grid-cols-2 gap-4">
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <div>
              <p class="font-semibold text-gray-900 dark:text-white">Text Recognition</p>
              <p class="text-sm text-gray-600 dark:text-gray-400">OCR for scanned documents</p>
            </div>
          </div>
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <div>
              <p class="font-semibold text-gray-900 dark:text-white">Format Preservation</p>
              <p class="text-sm text-gray-600 dark:text-gray-400">Maintains layout and styles</p>
            </div>
          </div>
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <div>
              <p class="font-semibold text-gray-900 dark:text-white">Table Detection</p>
              <p class="text-sm text-gray-600 dark:text-gray-400">Converts tables accurately</p>
            </div>
          </div>
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <div>
              <p class="font-semibold text-gray-900 dark:text-white">Image Extraction</p>
              <p class="text-sm text-gray-600 dark:text-gray-400">Includes all images</p>
            </div>
          </div>
        </div>
      </div>

      <div class="glass p-8 rounded-2xl border border-gray-200/50 dark:border-gray-700/50">
        <h3 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">How It Works</h3>
        <ol class="space-y-4 text-gray-600 dark:text-gray-400">
          <li class="flex items-start space-x-3">
            <span class="flex-shrink-0 w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold">1</span>
            <p>Upload your PDF file (text or scanned image)</p>
          </li>
          <li class="flex items-start space-x-3">
            <span class="flex-shrink-0 w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold">2</span>
            <p>Our AI analyzes the document and extracts content</p>
          </li>
          <li class="flex items-start space-x-3">
            <span class="flex-shrink-0 w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold">3</span>
            <p>Text, images, and formatting are preserved</p>
          </li>
          <li class="flex items-start space-x-3">
            <span class="flex-shrink-0 w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold">4</span>
            <p>Download your fully editable Word document</p>
          </li>
        </ol>
      </div>
    </div>
  </ToolTemplate>

  <Footer />
</BaseLayout>














