---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Navbar from '@/components/Navbar.astro';
import Footer from '@/components/Footer.astro';
import { ToolTemplate } from '@/components/ToolTemplate';
---

<BaseLayout
  title="Fill PDF Forms - Complete PDF Forms Online | PDFMasterTool"
  description="Fill out PDF forms online quickly and easily. Add text to fillable fields, checkboxes, and dropdowns. Save and download completed forms."
  canonical="/tools/fill-forms"
>
  <Navbar />

  <ToolTemplate
    client:load
    toolName="Fill PDF Forms"
    toolDescription="Fill out PDF forms with text, checkboxes, and signatures online"
    toolIcon="üìù"
    acceptedFormats={['.pdf']}
    maxFileSize={100}
    maxFiles={1}
    multiple={false}
    toolType="fill-forms"
    outputFileName="converted.pdf"
  
  
  >
    <div class="space-y-6">
      <div class="glass p-8 rounded-2xl border border-primary-200/50 dark:border-primary-800/50 bg-gradient-to-br from-primary-50/50 to-blue-50/50 dark:from-primary-900/10 dark:to-blue-900/10">
        <div class="flex items-start space-x-3">
          <svg class="w-6 h-6 text-primary-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
            <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd" />
          </svg>
          <div>
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Interactive Form Filling</h3>
            <p class="text-gray-600 dark:text-gray-400">
              Our smart form filler automatically detects all fillable fields in your PDF. Click any field to enter text, check boxes, or select from dropdowns.
            </p>
          </div>
        </div>
      </div>

      <div class="glass p-8 rounded-2xl border border-gray-200/50 dark:border-gray-700/50">
        <h3 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">How to Fill PDF Forms</h3>
        <ol class="space-y-4 text-gray-600 dark:text-gray-400">
          <li class="flex items-start space-x-3">
            <span class="flex-shrink-0 w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold">1</span>
            <p>Upload your PDF form</p>
          </li>
          <li class="flex items-start space-x-3">
            <span class="flex-shrink-0 w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold">2</span>
            <p>All fillable fields will be automatically highlighted</p>
          </li>
          <li class="flex items-start space-x-3">
            <span class="flex-shrink-0 w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold">3</span>
            <p>Click each field and enter your information</p>
          </li>
          <li class="flex items-start space-x-3">
            <span class="flex-shrink-0 w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold">4</span>
            <p>Download your completed PDF form</p>
          </li>
        </ol>
      </div>

      <div class="glass p-8 rounded-2xl border border-gray-200/50 dark:border-gray-700/50">
        <h3 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">Supported Field Types</h3>
        <div class="grid md:grid-cols-2 gap-4">
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <div>
              <p class="font-semibold text-gray-900 dark:text-white">Text Fields</p>
              <p class="text-sm text-gray-600 dark:text-gray-400">Names, addresses, numbers</p>
            </div>
          </div>
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <div>
              <p class="font-semibold text-gray-900 dark:text-white">Checkboxes</p>
              <p class="text-sm text-gray-600 dark:text-gray-400">Yes/No selections</p>
            </div>
          </div>
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <div>
              <p class="font-semibold text-gray-900 dark:text-white">Radio Buttons</p>
              <p class="text-sm text-gray-600 dark:text-gray-400">Single-choice options</p>
            </div>
          </div>
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <div>
              <p class="font-semibold text-gray-900 dark:text-white">Dropdown Menus</p>
              <p class="text-sm text-gray-600 dark:text-gray-400">Select from list</p>
            </div>
          </div>
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <div>
              <p class="font-semibold text-gray-900 dark:text-white">Date Fields</p>
              <p class="text-sm text-gray-600 dark:text-gray-400">Date picker integration</p>
            </div>
          </div>
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <div>
              <p class="font-semibold text-gray-900 dark:text-white">Signature Fields</p>
              <p class="text-sm text-gray-600 dark:text-gray-400">Draw or type signatures</p>
            </div>
          </div>
        </div>
      </div>

      <div class="glass p-8 rounded-2xl border border-gray-200/50 dark:border-gray-700/50">
        <h3 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">Common Form Types</h3>
        <div class="grid md:grid-cols-3 gap-4 text-center">
          <div class="p-4">
            <div class="text-4xl mb-2">üìã</div>
            <p class="font-semibold text-gray-900 dark:text-white mb-1">Tax Forms</p>
            <p class="text-sm text-gray-600 dark:text-gray-400">W-9, 1040, etc.</p>
          </div>
          <div class="p-4">
            <div class="text-4xl mb-2">üíº</div>
            <p class="font-semibold text-gray-900 dark:text-white mb-1">Job Applications</p>
            <p class="text-sm text-gray-600 dark:text-gray-400">Employment forms</p>
          </div>
          <div class="p-4">
            <div class="text-4xl mb-2">üè•</div>
            <p class="font-semibold text-gray-900 dark:text-white mb-1">Medical Forms</p>
            <p class="text-sm text-gray-600 dark:text-gray-400">Patient intake</p>
          </div>
        </div>
      </div>

      <div class="glass p-6 rounded-2xl border border-green-200/50 dark:border-green-800/50 bg-green-50/50 dark:bg-green-900/10">
        <div class="flex items-start space-x-3">
          <svg class="w-6 h-6 text-green-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <div>
            <p class="text-sm font-medium text-green-900 dark:text-green-200 mb-1">Pro Tip</p>
            <p class="text-sm text-green-800 dark:text-green-300">
              Use the "Flatten Form" option to create a final, non-editable version of your completed form - perfect for official submissions!
            </p>
          </div>
        </div>
      </div>
    </div>
  </ToolTemplate>

  <Footer />
</BaseLayout>














