    acceptedFormats={['.pdf']}
    maxFileSize={100}
    maxFiles={1}
    multiple={false}
    toolType="rotate-pdf"
    outputFileName="rotated.pdf"
  >
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-900 dark:text-white mb-2">
            Rotation Angle
          </label>
          <div class="grid grid-cols-3 gap-4">
            <button class="px-4 py-3 glass hover:glass-hover border-2 border-primary-600 rounded-xl font-semibold transition-all">
              90Â° Right
            </button>
            <button class="px-4 py-3 glass hover:glass-hover border border-gray-200/50 dark:border-gray-700/50 rounded-xl font-semibold transition-all">
