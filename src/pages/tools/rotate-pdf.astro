---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Navbar from '@/components/Navbar.astro';
import Footer from '@/components/Footer.astro';
import { ToolTemplate } from '@/components/ToolTemplate';
import { rotatePDF } from '@/utils/pdfUtils';
---

<BaseLayout
  title="Rotate PDF - Rotate PDF Pages | PDFMasterTool"
  description="Rotate PDF pages 90, 180, or 270 degrees. Rotate all pages or individual pages. Fast and free."
  canonical="/tools/rotate-pdf"
>
  <Navbar />

  <ToolTemplate
    client:load
    toolName="Rotate PDF"
    toolDescription="Rotate PDF pages 90Â°, 180Â°, or 270Â° degrees"
