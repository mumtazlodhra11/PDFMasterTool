---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Navbar from '@/components/Navbar.astro';
import Footer from '@/components/Footer.astro';
import ToolTemplate from '@/components/ToolTemplate';
---

<BaseLayout
  title="Smart Organizer - Auto-categorize and organize PDFs (Coming Soon!) | PDFEliteTools"
  description="Auto-categorize and organize PDFs (Coming Soon!)"
  canonical="/tools/smart-organizer"
>
  <Navbar />

  <ToolTemplate
    client:load
    toolName="Smart Organizer"
    toolDescription="Auto-categorize and organize PDFs (Coming Soon!)"
    toolIcon="ðŸ—‚ï¸"
    acceptedFormats={['.pdf']}
    maxFileSize={20}
    maxFiles={1}
    multiple={false}
    toolType="smart-organizer"
    outputFileName={(name) => name.replace(/\.pdf$/i, '.json')}
  >
    <div class="glass p-8 rounded-2xl border border-gray-200/50 dark:border-gray-700/50">
      <h3 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">Coming Soon</h3>
      <p class="text-gray-600 dark:text-gray-400">This tool is under development and will be available soon!</p>
    </div>
  </ToolTemplate>

  <Footer />
</BaseLayout>
