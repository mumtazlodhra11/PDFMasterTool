---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Navbar from '@/components/Navbar.astro';
import Footer from '@/components/Footer.astro';
import { ToolTemplate } from '@/components/ToolTemplate';
---

<BaseLayout
  title="PDF to PowerPoint - Convert PDF to PPT | PDFMasterTool"
  description="Convert PDF to editable PowerPoint presentations"
  canonical="/tools/pdf-to-powerpoint"
>
  <Navbar />

  <ToolTemplate
    client:load
    toolName="PDF to PowerPoint"
    toolDescription="Convert PDF to editable PowerPoint presentations"
    toolIcon="ðŸ“Š"
    acceptedFormats={['.pdf']}
    maxFileSize={50}
    maxFiles={1}
    multiple={false}
    toolType="pdf-to-ppt"
    outputFileName="converted.pptx"
  >
    <div class="glass p-8 rounded-2xl border border-gray-200/50 dark:border-gray-700/50">
      <h3 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">Features</h3>
      <p class="text-gray-600 dark:text-gray-400">Convert your PDF documents to editable PowerPoint presentations. Server-side processing ensures high quality.</p>
    </div>
  </ToolTemplate>

  <Footer />
</BaseLayout>
