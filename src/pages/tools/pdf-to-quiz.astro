---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Navbar from '@/components/Navbar.astro';
import Footer from '@/components/Footer.astro';
import ToolTemplate from '@/components/ToolTemplate';
---

<BaseLayout
  title="PDF to Quiz - Generate interactive quizzes from PDF content | PDFEliteTools"
  description="Generate interactive quizzes from PDF content. Create MCQs, True/False, and Fill-in-the-blank questions automatically."
  canonical="/tools/pdf-to-quiz"
>
  <Navbar />

  <ToolTemplate
    client:load
    toolName="PDF to Quiz"
    toolDescription="Generate interactive quizzes from PDF content"
    toolIcon="ðŸ“"
    acceptedFormats={['.pdf']}
    maxFileSize={30}
    maxFiles={1}
    multiple={false}
    toolType="pdf-to-quiz"
    outputFileName={(name) => name.replace('.pdf', '_quiz.json')}
  >
    <div class="space-y-6">
      <div class="glass p-8 rounded-2xl border border-primary-200/50 dark:border-primary-800/50 bg-gradient-to-br from-primary-50/50 to-blue-50/50 dark:from-primary-900/10 dark:to-blue-900/10">
        <div class="flex items-start space-x-3">
          <svg class="w-6 h-6 text-primary-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
            <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd" />
          </svg>
          <div>
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">AI-Powered Quiz Generator</h3>
            <p class="text-gray-600 dark:text-gray-400">
              Automatically generate interactive quiz questions from your PDF documents. Creates multiple choice questions (MCQs), True/False questions, and Fill-in-the-blank questions using AI technology.
            </p>
          </div>
        </div>
      </div>

      <div class="glass p-8 rounded-2xl border border-gray-200/50 dark:border-gray-700/50">
        <h3 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">Question Types</h3>
        <div class="grid md:grid-cols-3 gap-4 text-gray-600 dark:text-gray-400">
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <div>
              <h4 class="font-semibold text-gray-900 dark:text-white mb-1">Multiple Choice (MCQ)</h4>
              <p class="text-sm">4 options with one correct answer</p>
            </div>
          </div>
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <div>
              <h4 class="font-semibold text-gray-900 dark:text-white mb-1">True/False</h4>
              <p class="text-sm">Statement-based questions</p>
            </div>
          </div>
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <div>
              <h4 class="font-semibold text-gray-900 dark:text-white mb-1">Fill in the Blank</h4>
              <p class="text-sm">Complete the sentence questions</p>
            </div>
          </div>
        </div>
      </div>

      <div class="glass p-6 rounded-xl border border-blue-200/50 dark:border-blue-800/50 bg-blue-50/50 dark:bg-blue-900/10">
        <div class="flex items-start space-x-3">
          <svg class="w-5 h-5 text-blue-600 dark:text-blue-400 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
          <div>
            <h4 class="font-semibold text-blue-900 dark:text-blue-200 mb-1">How It Works</h4>
            <p class="text-sm text-blue-800 dark:text-blue-300">
              The tool extracts text from your PDF and uses AI to generate relevant quiz questions. The output is a JSON file containing all questions, answers, and explanations. You can use this JSON to create interactive quizzes in your applications.
            </p>
          </div>
        </div>
      </div>
    </div>
  </ToolTemplate>

  <Footer />
</BaseLayout>
