---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Navbar from '@/components/Navbar.astro';
import Footer from '@/components/Footer.astro';
import ToolTemplate from '@/components/ToolTemplate';
---

<BaseLayout
  title="Extract Text (OCR) - Extract all text from PDF including scanned documents (Tesseract.js) | PDFEliteTools"
  description="Extract all text from PDF including scanned documents (Tesseract.js)"
  canonical="/tools/pdf-ocr-extract"
>
  <Navbar />

  <ToolTemplate
    client:load
    toolName="Extract Text (OCR)"
    toolDescription="Extract all text from PDF including scanned documents (Tesseract.js)"
    toolIcon="ðŸ“„"
    acceptedFormats={['.pdf']}
    maxFileSize={50}
    maxFiles={1}
    multiple={false}
    toolType="pdf-ocr-extract"
    outputFileName={(name) => name.replace(/\.[^/.]+$/, '') + '_extracted.txt'}
  />

  <Footer />
</BaseLayout>
